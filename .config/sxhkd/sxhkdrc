super + shift + d
    wmctrl -xa jetbrains-idea-ce && exit; \
    wmctrl -a 'Code - OSS' && exit; \
    wmctrl -xa 'jetbrains-studio' && exit; \
    code_opts=("IntelliJ" "VSCode" "Android Studio"); \
    selected_option=$(printf '%s\n' "${code_opts[@]}" | rofi -dmenu -p "Select an IDE"); \
    if [ "$selected_option" = "VSCode" ]; then \
        code; \
    elif [ "$selected_option" = "IntelliJ" ]; then \
        _JAVA_AWT_WM_NONREPARENTING=1 idea; \
    elif [ "$selected_option" = "Android Studio" ]; then \
        android-studio; \
    fi

