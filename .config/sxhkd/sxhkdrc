super + shift + {h,j,k,l}
    { dir=west  dx=-30 dy=0 \
    , dir=south dx=0   dy=30 \
    , dir=north dx=0   dy=-30 \
    , dir=east  dx=30  dy=0 \
    }; \
    if [[ -n $(bspc query -N -n .focused -n focused.tiled) ]]; then bspc node --swap $dir --follow || bspc node -m "$dir" --follow; else bspc node --move "$dx" "$dy"; fi


ctrl + alt + shift + {q,e}
    bspc node -d {prev,next} --follow

