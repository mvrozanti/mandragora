[module/ip]
type = custom/script
exec = curl -s http://checkip.dyndns.org/ | perl -pe 's/.*: (.*?)<.*/\1/' | ([[ -f /tmp/hideip ]] && sed 's/[0-9]/X/g' || xargs)
click-left = [[ -f /tmp/hideip ]] && rm /tmp/hideip || touch /tmp/hideip
format-underline = ${xrdb:color3}
label-padding = 1
interval = 10
format-prefix = 
label-font = 5
prefix-font = 4

[module/portwatch]
