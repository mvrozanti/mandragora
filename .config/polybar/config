[module/ip]
type = custom/script
exec = curl -s https://ipinfo.io/ip | ([[ -f /tmp/hideip ]] && sed 's/[0-9]/X/g' || xargs)
click-left = [[ -f /tmp/hideip ]] && rm /tmp/hideip || touch /tmp/hideip
format-underline = ${xrdb:color3}
label-padding = 1
interval = 5
format-prefix = Ó¶å
label-font = 5
prefix-font = 4

