#!/bin/bash
is_local=$1
arg=$2
delta=5

if [[ $is_local == all ]]; then
    gap_command="bspc config window_gap"
else
    gap_command="bspc config -d focused window_gap"
fi

current=$($gap_command)

case "$arg" in
    plus)
        $gap_command $((current + delta))
        ;;
    minus)
        if [[ $current -ne 0 ]]; then
            $gap_command $((current - delta))
        fi
        ;;
    equal)
        $gap_command 50
        ;;
    zero)
        $gap_command 0
        ;;
    *)
        $gap_command $arg
        ;;
esac

