#!/bin/bash
window_gap="bspc config window_gap"
delta=5

case "$1" in
        plus) $($window_gap $((`$window_gap` + $delta ))) ;;

        minus) if [ `$window_gap` -ne 0 ]; then
                $($window_gap $((`$window_gap` - $delta )))
                fi ;;

        equal) 
                $($window_gap 50)
                xdotool key Escape 
                ;;

        zero) 
                $($window_gap 0) 
                xdotool key Escape 
                ;;

        *) 
                $($window_gap $1)
                xdotool key Escape 
                ;;
esac
